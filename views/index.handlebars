 <div class="container">                   
    


 <div class ="row">       
<div class="col-sm-6">
<h2>Burgers on Menu!</h2>

<ul>
  {{#each burgers}} {{#unless devoured}}
  <li>{{id}}.{{burger_name}}
  <span><button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
    Devour Me!</button></span></li>
  {{/unless}} {{/each}}
</ul>

</div>

 
<div class="col-sm-6">
<h2>Burgers that are Devoured!</h2>

<ul>
  {{#each burgers}} {{#if devoured}}
  <li>{{id}}.{{burger_name}}</li>
  {{/if}} {{/each}}
</ul>
</div>
</div>


 <div class ="row">       
<div class="col-sm-12">
<h2 id = "addBurgerTitle">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name">
  </div>

  <button id="submit" type="submit">Add Burger</button>
</form>
</div>
</div>
